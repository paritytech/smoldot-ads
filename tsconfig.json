{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["es6", "dom"],
    "target": "esnext",
    "skipLibCheck": true,
    "strict": true,
    "module": "ES2015"
  },
  "include": ["src", "src/assets/*.json"]
}
